{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .auth-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            background: linear-gradient(135deg, rgba(67, 56, 202, 0.05), rgba(30, 41, 59, 0.05));
        }
        
        .auth-card {
            background: rgba(255, 255, 255, 0.98);
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(67, 56, 202, 0.15);
            overflow: hidden;
            position: relative;
        }

        .auth-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, var(--primary-indigo), var(--primary-slate));
        }

        .auth-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .auth-header h1 {
            color: var(--primary-indigo);
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .auth-header p {
            color: #718096;
            font-size: 0.95rem;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px;
            border: 2px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-indigo);
            box-shadow: 0 0 0 0.2rem rgba(67, 56, 202, 0.1);
        }

        .btn-primary {
            background: linear-gradient(90deg, var(--primary-indigo), var(--primary-slate));
            border: none;
            border-radius: 8px;
            padding: 12px;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(90deg, var(--hover-indigo), var(--hover-slate));
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(67, 56, 202, 0.2);
        }

        .auth-footer {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid #e2e8f0;
        }

        .btn-link {
            color: var(--primary-indigo);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .btn-link:hover {
            color: var(--hover-indigo);
        }

        .form-label {
            font-weight: 500;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5">
                    <div class="auth-card card">
                        <div class="card-body p-4">
                            <div class="auth-header">
                                <h1>Bienvenue</h1>
                                <p>Connectez-vous à votre compte</p>
                            </div>

                            <form method="post" action="{{ path('app_login') }}">
                                {% if error %}
                                    <div class="alert alert-danger">
                                        {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </div>
                                {% endif %}

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" value="{{ last_username }}" name="email" id="email" 
                                           class="form-control" required autofocus>
                                </div>

                                <div class="mb-4">
                                    <label for="password" class="form-label">Mot de passe</label>
                                    <input type="password" name="password" id="password" class="form-control" required>
                                </div>

                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <button class="btn btn-primary w-100 mb-3" type="submit">
                                    Se connecter
                                </button>

                                <div class="auth-footer">
                                    <p class="mb-2">Pas encore de compte ?</p>
                                    <a href="{{ path('app_register') }}" class="btn btn-link">Créer un compte</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 