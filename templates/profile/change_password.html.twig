{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title mb-4">Changer mon mot de passe</h2>
                    
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.currentPassword) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.newPassword.first) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.newPassword.second) }}
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="{{ path('app_profile') }}" class="btn btn-secondary me-md-2">Annuler</a>
                            <button type="submit" class="btn btn-primary">Changer le mot de passe</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 