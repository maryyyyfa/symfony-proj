{% extends 'base.html.twig' %}

{% block title %}Cours disponibles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .course-list {
            padding: 2rem 0;
        }

        .course-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
            border: none;
            box-shadow: 0 4px 12px rgba(67, 56, 202, 0.1);
        }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px rgba(67, 56, 202, 0.15);
        }

        .course-image {
            height: 200px;
            object-fit: cover;
            border-bottom: 3px solid;
            border-image: linear-gradient(90deg, var(--primary-indigo), var(--primary-slate)) 1;
        }

        .course-title {
            color: var(--primary-indigo);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .course-description {
            color: #718096;
            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

        .course-category {
            display: inline-block;
            padding: 0.25rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            background: linear-gradient(90deg, rgba(67, 56, 202, 0.1), rgba(30, 41, 59, 0.1));
            color: var(--primary-indigo);
            margin-bottom: 1rem;
        }

        .btn-view-course {
            background: linear-gradient(90deg, var(--primary-indigo), var(--primary-slate));
            color: white;
            border: none;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-view-course:hover {
            background: linear-gradient(90deg, var(--hover-indigo), var(--hover-slate));
            transform: translateY(-1px);
            color: white;
        }

        .page-header {
            background: linear-gradient(90deg, var(--primary-indigo), var(--primary-slate));
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 20px 20px;
        }

        .no-courses {
            text-align: center;
            padding: 3rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 12px rgba(139, 92, 246, 0.1);
        }

        .no-courses i {
            font-size: 3rem;
            color: var(--primary-purple);
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <h1 class="mb-4">Cours disponibles</h1>

    <div class="row">
        {% for course in courses %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ course.title }}</h5>
                        <p class="card-text">{{ course.description|slice(0, 100) }}...</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-secondary">{{ course.category }}</span>
                            <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-primary">
                                Voir le cours
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col">
                <p>Aucun cours disponible pour le moment.</p>
            </div>
        {% endfor %}
    </div>
{% endblock %} 